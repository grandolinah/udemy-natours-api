extends base

block content
  main.main
    .review-form
      h2.heading-secondary.ma-bt-lg Update a review
      form.form.form--review
        .form__group
          label.form__label(for='review') Review
          input#review.form__input(type='text', placeholder='Text', required, rows="4", cols="50" value=`${review.review}`)
        .form__group.ma-bt-md
          label.form__label(for='rating') Rating
          input#rating.form__input(type='number', placeholder='4.5', required, min=1, max=5 value=`${review.rating}`)
        .form__group
          button#update-review-btn.btn.btn.btn--green(data-user=`${user.id}` data-review=`${review.id}`) Update review