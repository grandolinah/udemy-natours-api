extends base

block content
  main.main
    .review-form
      h2.heading-secondary.ma-bt-lg Leave a review
      form.form.form--review
        .form__group
          label.form__label(for='review') Review
          textarea#review.form__input(type='textarea', placeholder='Text', required, rows="4", cols="50")
        .form__group.ma-bt-md
          label.form__label(for='rating') Rating
          input#rating.form__input(type='number', placeholder='4.5', required, min=1, max=5)
        .form__group
          button#review-btn.btn.btn.btn--green(data-user=`${user.id}`) Leave review