{
  "extends": [
    "airbnb",
    "prettier",
    "plugin:node/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "no-return-await": "off",
    "no-cond-assign": 0,
    "max-len": 0,
    "linebreak-style": 0,
    "one-var": [
      0,
      "always"
    ],
    "func-names": [
      "error",
      "never"
    ],
    "indent": [
      "error",
      2,
      {
        "VariableDeclarator": {
          "var": 2,
          "let": 2,
          "const": 3
        }
      }
    ],
    "keyword-spacing": 0,
    "no-use-before-define": 0,
    "no-underscore-dangle": "off",
    "one-var-declaration-per-line": 0,
    "prefer-destructuring": [
      "error",
      {
        "object": true,
        "array": false
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "req|res|next|val"
      }
    ]
  },
  "env": {
    "browser": true
  }
}